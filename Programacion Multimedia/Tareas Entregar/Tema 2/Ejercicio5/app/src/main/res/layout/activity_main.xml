<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grados"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#2196F3"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="214dp"
        android:layout_height="150dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="195dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_org"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="@string/tv_org"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/org"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbtOrgCentigrados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rbtOrgCentrigrados" />

            <RadioButton
                android:id="@+id/rbtOrgKelvin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rbtOrgKelvin" />

            <RadioButton
                android:id="@+id/rbtOrgFaren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rbtOrgFaren" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="200dp"
        android:layout_height="154dp"
        android:layout_marginStart="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_dst"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="@string/tv_dst"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/dst"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rbtDstCelsius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rbtDstCelsius" />

            <RadioButton
                android:id="@+id/rbtDstKelvin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rbtDstKelvin" />

            <RadioButton
                android:id="@+id/rbtDstFaren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rbtDstFaren" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="580dp"
        android:layout_marginStart="2dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/entrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/entrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escriba aqui los grados para la conversiÃ³n" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnMostrar"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#03A9F4"
            android:fontFamily="@font/aldrich"
            android:text="@string/btnMostrar"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>